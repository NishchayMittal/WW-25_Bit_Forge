{
  "name": "ocean-exploration-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Ocean exploration platform with multiple applications",
  "scripts": {
    "dev": "npm run dev --workspace=main-app",
    "dev:main": "npm run dev --workspace=main-app",
    "dev:about": "npm run dev --workspace=aboutus",
    "dev:info": "npm run dev --workspace=info-ocean",
    "dev:map": "npm run dev --workspace=marine-map",
    "dev:shorts": "npm run dev --workspace=marine-shorts",
    "build": "npm run build --workspaces",
    "build:main": "npm run build --workspace=main-app",
    "start": "npm run start --workspace=main-app",
    "lint": "npm run lint --workspaces",
    "clean": "rm -rf .next dist build apps/*/.next apps/*/dist apps/*/build",
    "install-all": "npm install && npm install --workspaces"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "keywords": [
    "ocean",
    "marine",
    "exploration",
    "nextjs",
    "react",
    "monorepo"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5"
  }
}
